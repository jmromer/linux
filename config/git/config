[alias]
	a        = stage-files
	aa       = add --all
	ahs      = select-sha-reversed
	ap       = add --patch
	b        = branch -vv
	bc       = create-branch-with-remote
	bcc      = create-branch-continuation
	bcl      = create-branch
	bd       = delete-branch
	bdf      = branch -D
	bdo      = clear-deleted-branches
	bh       = bisect-helper
	ca       = commit-amend
	cap      = commit --no-verify --amend --no-edit
	cli      = clock-in
	clo      = clock-out
	cloe     = clock-out-with-editor
	cm       = commit-quick
	cmf      = commit-fixup
	cmm      = commit-quick-force
	cms      = commit-squash
	cmt      = commit-tagged
	co       = checkout
	co-      = !"git checkout -- $(git select-files) && git status --short"
	cob      = checkout-branch
	coba     = checkout-branch --all
	coc      = checkout-commit
	colf     = !sh -c 'git checkout -- $(git select-files)'
	cp       = cherry-pick
	cours    = checkout --ours
	ctheirs  = checkout --theirs
	d        = diff
	dh       = diff --histogram
	ds       = diff --staged
	f        = fetch
	h        = log --format=brief --abbrev-commit --graph
	hb       = hg HEAD --not origin/master
	hdiff    = hg -U1
	hfiles   = hg --format=medium --stat
	hg       = log --format=brief --abbrev-commit
	hh       = !git --no-pager hg -n 15
	hm       = hg --merge
	hnm      = hg --no-merges --show-linear-break
	hsince   = !sh -c 'git hg --since=$1' -
	hstat    = hg --stat
	i        = init
	ig       = ignore
	lg       = log --grep
	lgr      = log --walk-reflogs --grep
	lp       = log --patch
	lpr      = log --patch -G
	lps      = log --patch -S
	m        = merge
	ma       = merge --abort
	mc       = merge --continue
	mt       = mergetool
	p        = push
	pf       = push --force-with-lease
	pls      = pull --autostash
	po       = push origin
	pu       = push -u
	r        = rebase --ignore-date
	ra       = rebase --abort
	rc       = rebase --continue
	rem      = remote -v
	resf     = !sh -c 'git reset $(git select-files)'
	revf     = !sh -c 'files=$(git select-files) && git reset ${files} >/dev/null && git checkout -- ${files}'
	ri       = rebase-interactive
	rim      = rebase --ignore-date master
	rmc      = remove-commit
	s        = stash
	sa       = !sh -c 'git stash apply stash@{$1}' -
	sc       = stash clear
	sd       = !sh -c 'git stash drop stash@{$1}' -
	sf       = select-files
	sha      = select-sha
	sl       = stash list
	sp       = stash pop
	squash   = !sh -c 'git fetch && git rebase --ignore-date -i origin/${1:-master}' -
	ss       = !sh -c 'git show stash@{$1}' -
	su       = stash --include-untracked
	up       = !sh -c 'git fetch && git rebase --ignore-date origin/${1:-master}' -

[branch]
	autosetuprebase = always

[color]
	ui = true

[color "diff"]
	commit     = green
	frag       = cyan
	meta       = yellow
	new        = green
	old        = red
	whitespace = red reverse

[color "diff-highlight"]
	newHighlight = green 22
	newNormal    = green
	oldHighlight = red 52
	oldNormal    = red

[commit]
	gpgsign = true

[core]
	autocrlf = input
	editor   = nvim

[delta]
	line-numbers = true
	minus-style  = "syntax #340001"
	navigate     = true
	plus-style   = "syntax #012800"
	side-by-side = true

[diff]
	line-numbers = true
	renames      = true
	tool         = vimdiff3

[difftool]
	prompt = false

[fetch]
	prune = true

[filter "lfs"]
	clean    = git-lfs clean -- %f
	process  = git-lfs filter-process
	required = true
	smudge   = git-lfs smudge -- %f

[filter "media"]
	clean  = git-media-clean %f
	smudge = git-media-smudge %f

[format]
	headers = "Content-Type: text/plain;charset=utf-8\n"
	signOff = yes

[gpg]
	program = gpg

[http]
	postbuffer = 524288000

[init]
	defaultBranch = master

[interactive]
	diffFilter  = delta --color-only
	singlekey  = true

[log]
	date = iso

[magit]
	hideCampaign = true

[magithub]
	online = false

[magithub "status"]
	includeIssuesSection = false
	includePullRequestsSection = false
	includeStatusHeader = false

[merge]
	conflictstyle = diff3
	ff            = no
	tool          = vimdiff

[mergetool]
	keepBackup = false
	prompt     = false

[pager]
	diff   = delta
	reflog = delta
	stash  = delta

[pretty]
	brief    = "%Cred%h%Creset %C(bold)%<(50,trunc)%s%Creset%Cgreen%>>(11)%cd%Creset %C(yellow)%+D%Creset"
	extended = "%Cred%h%Creset %C(bold)%<(100,trunc)%s%Creset %Cgreen%>>(40)%D%Creset"
	select   = "%Cred%h%Creset %C(bold)%<(50,trunc)%s%Creset %Cgreen%>>(20)%D%Creset"

[pull]
	rebase  = true

[push]
	default = simple

[rebase]
	autosquash = true

[rerere]
	enabled = true

[sendemail]
	annotate         = true
	confirm          = auto
	smtpEncryption   = starttls
	smtpServer       = 127.0.0.1
	smtpServerport   = 1025
	suppressCC       = self
	transferEncoding = 8bit

[ssh]
	postbuffer = 524288000

[include]
	path = ~/.dotfiles/secure/config/git/config
	path = ~/.dotfiles/locals/config/git/config

